<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="colorSurfaceVariant">#11ba8247</item>textFillColor
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorOnPrimary">@color/darkGrey</item>
        <item name="colorPrimaryContainer">#fff3c492</item>
        <item name="colorOnPrimaryContainer">#ff042100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkColorPrimary</item>
        <item name="colorSecondaryVariant">@color/darkGrey</item>
        <item name="colorSecondaryContainer">#ffe6d7c7</item>
        <item name="colorOnSecondaryContainer">#ff342516</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <item name="android:fontFamily">@font/source_sans_pro_regular</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/darkGrey</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_logo_black_bg</item>
        <item name="postSplashScreenTheme">@style/Theme.AppTheme</item>
    </style>
</resources>