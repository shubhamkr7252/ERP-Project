<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Widget.Material3.CardView.Filled"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardCornerRadius="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/attendanceCheckLayout"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:contentPadding="10sp"
            android:layout_marginTop="15sp"
            android:layout_marginStart="15sp"
            style="@style/Widget.Material3.CardView.Filled"
            app:cardBackgroundColor="?android:colorPrimary">
            <TextView
                android:id="@+id/attendanceCheckTV"
                android:gravity="center"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginHorizontal="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnPrimary"
                android:text="Absent"
                app:drawableStartCompat="@drawable/ic_baseline_check_24"
                android:drawablePadding="5sp"
                app:drawableTint="?attr/colorOnPrimary"/>
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:padding="10sp"
            android:layout_marginVertical="5sp">
            <TextView
                android:id="@+id/tv_course_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Date"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:text="Time"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/teacherLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginEnd="5sp"
                android:layout_marginBottom="5sp"
                android:orientation="horizontal">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.CardView.Outlined">
                    <ImageView
                        android:padding="5sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_twotone_person_24"
                        app:tint="?attr/colorPrimary" />
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:id="@+id/tv_course_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7sp"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/courseLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginEnd="5sp"
                android:layout_marginBottom="5sp"
                android:orientation="horizontal">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.CardView.Outlined">
                    <ImageView
                        android:padding="5sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_twotone_book_24"
                        app:tint="?attr/colorPrimary" />
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:id="@+id/tv_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7sp"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:dividerInsetEnd="0sp"
        app:dividerInsetStart="0sp" />
</com.google.android.material.card.MaterialCardView>