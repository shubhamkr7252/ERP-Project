                </com.google.android.material.card.MaterialCardView>-->

                <TextView
                    android:id="@+id/tv_result_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40sp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:fontFamily="@font/source_code_pro_regular"
                    android:maxLines="2"
                    android:text="Name"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_result_srn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40sp"
                    android:gravity="center"
                    android:text="SRN"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:textStyle="italic" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10sp"
                    tools:ignore="SmallSp" />

                <Button
                    android:id="@+id/editProfileBut"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Edit Profile"
                    android:textAllCaps="false"
                    app:cornerRadius="100dp"
                    app:icon="@drawable/ic_outline_edit_24"
                    app:iconGravity="end"
                    app:iconPadding="5sp"
                    tools:ignore="HardcodedText" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45sp"
                    android:layout_marginBottom="7sp"
                    android:text="Academic Details :"
                    android:textStyle="bold" />

                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.Material3.CardView.Elevated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40sp"
                    android:layout_marginBottom="15sp"
                    app:cardCornerRadius="5sp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="15sp"
                                android:layout_marginEnd="15sp"
                                android:src="@drawable/ic_outline_school_24"
                                app:tint="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/tv_result_course"
                                android:layout_width="wrap_content"
                                android:layout_height="50sp"
                                android:gravity="center"
                                android:paddingVertical="5sp"
                                android:text="Course : "
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="15sp"
                                android:layout_marginEnd="15sp"
                                android:src="@drawable/ic_outline_school_24"
                                android:visibility="invisible"
                                app:tint="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/tv_result_semester"
                                android:layout_width="wrap_content"
                                android:layout_height="50sp"
                                android:gravity="center"
                                android:paddingVertical="5sp"
                                android:text="Semester :"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45sp"
                    android:layout_marginBottom="7sp"
                    android:text="Personal Details :"
                    android:textStyle="bold" />

                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.Material3.CardView.Elevated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40sp"
                    android:layout_marginBottom="15sp"
                    app:cardCornerRadius="5sp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="15sp"
                                android:layout_marginEnd="15sp"
                                android:src="@drawable/ic_outline_cake_24"
                                app:tint="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/tv_result_birthday"
                                android:layout_width="wrap_content"
                                android:layout_height="50sp"
                                android:gravity="center"
                                android:paddingVertical="5sp"
                                android:text="Birthday : "
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="15sp"
                                android:layout_marginEnd="15sp"
                                android:src="@drawable/ic_outline_school_24"
                                android:visibility="invisible"
                                app:tint="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/tv_result_gender"
                                android:layout_width="wrap_content"
                                android:layout_height="50sp"
                                android:gravity="center"
                                android:paddingVertical="5sp"
                                android:text="Gender :"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="15sp"
                                android:layout_marginEnd="15sp"
                                android:src="@drawable/ic_outline_email_24"
                                app:tint="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/tv_result_email"
                                android:layout_width="wrap_content"
                                android:layout_height="50sp"
                                android:gravity="center"
                                android:maxLines="2"
                                android:paddingVertical="5sp"
                                android:text="Email : "
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="15sp"
                                android:layout_marginEnd="15sp"
                                android:src="@drawable/ic_outline_phone_24"
                                app:tint="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/tv_result_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="50sp"
                                android:gravity="center"
                                android:paddingVertical="5sp"
                                android:text="Phone Number : "
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!--<com.google.android.material.card.MaterialCardView
                    style="@style/Widget.Material3.CardView.Elevated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40sp"
                    android:layout_marginBottom="15sp"
                    app:cardCornerRadius="5sp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="15sp"
                            android:layout_marginEnd="15sp"
                            android:src="@drawable/ic_outline_email_24"
                            app:tint="?attr/colorPrimary" />
                        <TextView
                            android:id="@+id/tv_result_email"
                            android:layout_width="wrap_content"
                            android:layout_height="50sp"
                            android:paddingVertical="5sp"
                            android:gravity="center"
                            android:text="Email : "
                            android:maxLines="2"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>-->

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10sp"
                    tools:ignore="SmallSp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/logoutBut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:minWidth="0dp"
                    android:text="Logout"
                    app:icon="@drawable/ic_baseline_exit_to_app_24"
                    app:iconPadding="5dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20sp" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>