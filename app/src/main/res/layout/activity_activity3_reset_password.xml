<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity3ResetPassword"
    android:orientation="vertical"
    android:gravity="top"
    android:layout_marginTop="20sp">

  <com.google.android.material.button.MaterialButton
      android:id="@+id/loginText"
      style="@style/Widget.Material3.Button.ElevatedButton"
      android:layout_gravity="start"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20sp"
      android:text="Go Back"
      tools:ignore="HardcodedText"
      app:icon="@drawable/ic_outline_navigate_before_24"
      app:cornerRadius="100sp"
      android:layout_marginBottom="15sp"/>

  <TextView
      android:id="@+id/title"
      android:layout_gravity="center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="Find your email"
      android:textColor="?android:textColorPrimary"
      android:textSize="24sp"
      android:textStyle="bold"
      tools:ignore="HardcodedText" />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="Enter your email to continue"
      android:gravity="center"
      tools:ignore="HardcodedText"
      android:layout_marginBottom="15sp"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="40sp"
      android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10sp"
        android:src="@drawable/ic_outline_email_24"
        app:tint="?attr/colorPrimary" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailTextInputLayout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mail"
        tools:ignore="HardcodedText">

      <EditText
          android:id="@+id/mail"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="text"
          tools:ignore="HardcodedText"
          android:importantForAutofill="no" />
    </com.google.android.material.textfield.TextInputLayout>
  </LinearLayout>

  <Space
      android:layout_width="match_parent"
      android:layout_height="15sp"/>
  <com.google.android.material.button.MaterialButton
      android:layout_gravity="center"
      android:id="@+id/resetBut"
      android:layout_width="140sp"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="40sp"
      android:text="Reset Password"
      tools:ignore="HardcodedText"
      app:cornerRadius="100sp"
      android:layout_marginBottom="15sp"/>

  <TextView
      android:id="@+id/info"
      android:layout_gravity="center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="A reset link will be sent to your given mail to reset the password."
      android:textColor="?android:textColorPrimary"
      android:textStyle="italic"
      android:layout_marginHorizontal="50sp"
      android:gravity="center"
      tools:ignore="HardcodedText" />

</LinearLayout>